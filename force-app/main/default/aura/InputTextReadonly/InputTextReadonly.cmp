<aura:component >
    <aura:attribute name="id" type="String"/>
    <aura:attribute name="label" type="String"/>
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="type" type="String" default="textReadonly"/>
    <aura:attribute name="readonly" type="Boolean" default="true"/>
    
    <div class="slds-form-element">
		<span class="slds-form-element__label">{!v.label}</span>
		<div class="slds-form-element__control">
			<span id="{!v.id}" class="slds-form-element__static">
                {!v.value}
            </span>
		</div>
	</div>
</aura:component>