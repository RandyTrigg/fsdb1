<apex:page standardController="Assessment__c" extensions="AssessmentController" lightningStylesheets="true">
    <apex:form >
       <apex:pageBlock title="New letter">
           <apex:outputText value="{!$Setup.VF_text_New_Letters__c.Templates_menu_single_record__c}" />
           <apex:pageBlockSection />
           <apex:pageMessages />
            <apex:pageBlockButtons >
                <apex:commandButton action="{!buildLetters}" value="Confirm" title="Build new letter for this assessment"/>
                <apex:commandButton action="{!doCancel}" value="Cancel"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Information" >
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Template</apex:outputLabel>
                    <apex:selectList multiselect="false" size="1" value="{!selectedTemplate}">
                        <apex:selectOptions value="{!templates}" />
                    </apex:selectList>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>     
            <apex:pageBlockTable value="{!Assessment__c}" var="assessment">
                <apex:column value="{!assessment.Name}"/>
                <apex:column value="{!assessment.Advisor__r.Name}"/>
            </apex:pageBlockTable> 
        </apex:pageBlock>
    </apex:form>
</apex:page>